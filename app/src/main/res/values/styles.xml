<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>


    <style name="CustomActionBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/twenty_sp</item>

    </style>

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/twenty_sp</item>
        <item name="android:paddingLeft">@dimen/twenty_dp</item>
        <item name="android:paddingStart">@dimen/twenty_dp</item>
        <item name="android:paddingBottom">@dimen/five_dp</item>

    </style>

    <style name="ListItemStyle">
        <item name="android:padding">@dimen/fifteen_dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/twenty_sp</item>
        <item name="android:padding">@dimen/fifteen_dp</item>
        <item name="android:background">@drawable/button_press</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="LoginDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_to_up</item>
    </style>

    <style name="HelpTextStyle">
        <item name="android:textSize">@dimen/fifteen_sp</item>
        <item name="android:layout_marginBottom">@dimen/fifteen_dp</item>
        <!--<item name="android:layout_marginLeft">@dimen/twentyFive_dp</item>-->
        <!--<item name="android:layout_marginRight">@dimen/twentyFive_dp</item>-->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchButtonLayoutStyle">
        <item name="android:layout_weight">1</item>
    </style>

</resources>
