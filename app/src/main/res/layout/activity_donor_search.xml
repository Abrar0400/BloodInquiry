<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/five_dp"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginStart="@dimen/thirty_dp"
        android:layout_marginEnd="@dimen/thirty_dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_bg"
        android:id="@+id/districtSearchSpinner">

    </android.support.v7.widget.AppCompatSpinner>


    <ScrollView
        android:orientation="vertical"
        android:gravity="center"
        android:fadeScrollbars="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/thirty_dp"
            android:layout_marginStart="@dimen/thirty_dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="findDonor"
                    android:contentDescription="@string/a_positive_string"
                    android:src="@drawable/button_a_positive"
                    android:id="@+id/aPositiveButton"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="findDonor"
                    android:contentDescription="@string/a_negative_string"
                    android:src="@drawable/button_a_negative"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="findDonor"
                    android:contentDescription="@string/b_positive_string"
                    android:src="@drawable/button_b_positive"/>

                <ImageView
                    android:id="@+id/appCompatImageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="findDonor"
                    android:contentDescription="@string/b_negative_string"
                    android:src="@drawable/button_b_negative"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="findDonor"
                    android:contentDescription="@string/o_positive_string"
                    android:src="@drawable/button_o_positive"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="findDonor"
                    android:contentDescription="@string/o_negative_string"
                    android:src="@drawable/button_o_negative"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/appCompatImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/ab_positive_string"
                    android:onClick="findDonor"
                    android:src="@drawable/button_ab_positive" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="findDonor"
                    android:contentDescription="@string/ab_negative_string"
                    android:src="@drawable/button_ab_negative"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
